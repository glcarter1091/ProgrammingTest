@model IEnumerable<ProgrammingTest.Data.Title>

@{
    ViewData["Title"] = "Details";
}

<h1>Titles</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Publication Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var formattedDate = item.Pubdate.ToShortDateString();

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title1)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @formattedDate
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to Authors</a>
</div>
